<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Saat Ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B30007"/>  <!-- Warna biru gelap saat ditekan -->
            <corners android:radius="8dp"/>  <!-- Sudut membulat -->
        </shape>
    </item>

    <!-- Saat Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B33331"/> <!-- Warna default biru -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>
