<set xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator
        android:propertyName="scaleX"
        android:duration="200"
        android:valueFrom="1"
        android:valueTo="1.05"
        android:repeatCount="1"
        android:repeatMode="reverse" />
    <objectAnimator
        android:propertyName="scaleY"
        android:duration="200"
        android:valueFrom="1"
        android:valueTo="1.05"
        android:repeatCount="1"
        android:repeatMode="reverse" />
</set>
